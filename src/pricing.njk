                required: true,
                type: 'text'
            },
            {
                label: 'Adresse 2',
                required: false,
                type: 'text'
            },
            {
                label: 'Code postal',
                required: true,
                type: 'text'
            },
            {
                label: 'Ville',
                required: true,
                type: 'text'
            },
            {
                label: 'E-mail',
                required: true,
                type: 'email'
            },
            {
                label: 'Téléphone',
                required: true,
                type: 'phone'
            },
            {
                label: 'Sujet',
                required: false,
                type: 'text'
            },
            {
                label: 'Budget campagne',
                required: false,
                type: 'select',
                options: [
                    '500€ - 1000 €',
                    '1000€ - 2000 €',
                    '2000€ - 35000 €',
                    '+ 3500 €'
                ]
            },
            {
                label: 'Message',
